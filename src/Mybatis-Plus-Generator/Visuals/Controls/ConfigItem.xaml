<UserControl x:Class="Mybatis_Plus_Generator.Visuals.Controls.ConfigItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Mybatis_Plus_Generator.ViewModels"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance vm:ConfigItemInfoViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Visibility="{Binding InputType,Converter={StaticResource InputNoArgConverter}}"
                   IsEnabled="{Binding IsEnable}"
                   VerticalAlignment="Top" Style="{StaticResource MaterialDesignTextBlock}"
                   Margin="0,20,0,20" FontSize="16"
                   Text="{Binding SelectMethod.Name,Converter={StaticResource Lang}}"
                   >
        </TextBlock>
        <TextBox Visibility="{Binding InputType,Converter={StaticResource InputStringConverter}}"
                 IsEnabled="{Binding IsEnable}"
                 VerticalAlignment="Top" Text="{Binding Value}" 
                 Margin="0,0,0,20" FontSize="16"
                 md:HintAssist.Hint="{Binding SelectMethod.Name,Converter={StaticResource Lang}}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}">
        </TextBox>
        <ListBox ItemsSource="{Binding SelectMethod}"
            Visibility="{Binding InputType,Converter={StaticResource InputMultiStringConverter}}"
            IsEnabled="{Binding IsEnable}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox VerticalAlignment="Top" Text="{Binding Value}" 
                             Margin="0,0,0,20" FontSize="16"
                             md:HintAssist.Hint="{Binding SelectMethod.Name,Converter={StaticResource Lang}}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                    </TextBox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
    </Grid>
</UserControl>
